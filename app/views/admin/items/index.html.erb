<h1>Admin::Items#index</h1>
<p>Find me in app/views/admin/items/index.html.erb</p>
<div class= "container">
  <div class = "row">
    <h2 class="title">商品一覧</h2>
  </div>
  <div class= "row">
   <div class= "col-sm-12 col-md-8 col-lg-7 px-7 px-sm-0 mx-auto">
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
         <th>商品ID</th>
         <th>商品名</th>
         <th colpan="2"></th>
         <th>税抜き価格</th>
         <th>ジャンル</th>
         <th colspan="2"></th>
         <th>ステータス</th>
        </tr>
       </thead>
       <tbody>
        <% @items.each do |item| %>
         <tr>
          <td><%= item.id %></td>
          <td>
           <%= link_to edit_admin_item_path(item.id) do %>
           <%= item.name %>
           <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre_id %></td>
         </tr>
        <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>